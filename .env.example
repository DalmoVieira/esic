# Sistema E-SIC - Configurações de Ambiente
# Copie este arquivo para .env e configure as variáveis

# =======================================================
# BANCO DE DADOS
# =======================================================
DB_HOST=localhost
DB_NAME=esic_db
DB_USER=root
DB_PASS=
DB_PORT=3306
DB_CHARSET=utf8mb4

# =======================================================
# CONFIGURAÇÕES DA APLICAÇÃO
# =======================================================
APP_NAME="Sistema E-SIC"
APP_URL=http://localhost/esic
APP_ENV=development
APP_DEBUG=true
APP_TIMEZONE=America/Sao_Paulo

# =======================================================
# SEGURANÇA E AUTENTICAÇÃO
# =======================================================
JWT_SECRET=sua-chave-secreta-muito-forte-aqui-256-bits
JWT_EXPIRATION=3600
SESSION_NAME=esic_session
CSRF_TOKEN_NAME=_token
ENCRYPTION_KEY=chave-de-criptografia-32-caracteres

# =======================================================
# EMAIL/SMTP
# =======================================================
MAIL_DRIVER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=seu-email@gmail.com
MAIL_PASSWORD=sua-senha-de-app
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@esic.gov.br
MAIL_FROM_NAME="Sistema E-SIC"

# =======================================================
# OAUTH - GOOGLE
# =======================================================
GOOGLE_CLIENT_ID=seu-google-client-id
GOOGLE_CLIENT_SECRET=seu-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost/esic/auth/google/callback

# =======================================================
# OAUTH - GOV.BR
# =======================================================
GOVBR_CLIENT_ID=seu-govbr-client-id
GOVBR_CLIENT_SECRET=seu-govbr-client-secret
GOVBR_REDIRECT_URI=http://localhost/esic/auth/govbr/callback
GOVBR_ENVIRONMENT=homologacao

# =======================================================
# CONFIGURAÇÕES DE ARQUIVO
# =======================================================
UPLOAD_MAX_SIZE=10485760
UPLOAD_PATH=uploads/
ALLOWED_EXTENSIONS=pdf,doc,docx,jpg,jpeg,png,txt,rtf

# =======================================================
# CONFIGURAÇÕES DO ÓRGÃO
# =======================================================
ORGAO_NOME="Prefeitura Municipal"
ORGAO_ENDERECO="Rua Principal, 123 - Centro"
ORGAO_CIDADE="Cidade"
ORGAO_UF=SP
ORGAO_CEP=12345-678
ORGAO_TELEFONE="(11) 3333-3333"
ORGAO_EMAIL=contato@prefeitura.gov.br
ORGAO_SITE=https://www.prefeitura.gov.br

# =======================================================
# PRAZOS LEGAIS (em dias úteis)
# =======================================================
PRAZO_RESPOSTA_PRIMEIRA_INSTANCIA=20
PRAZO_RESPOSTA_SEGUNDA_INSTANCIA=10
PRAZO_RECURSO_CGU=15

# =======================================================
# CONFIGURAÇÕES DE LOGS
# =======================================================
LOG_LEVEL=info
LOG_PATH=logs/
LOG_MAX_SIZE=10485760
LOG_RETENTION_DAYS=90

# =======================================================
# CACHE E PERFORMANCE
# =======================================================
CACHE_DRIVER=file
CACHE_PREFIX=esic_
CACHE_TTL=3600

# =======================================================
# CONFIGURAÇÕES DE DESENVOLVIMENTO
# =======================================================
ENABLE_PROFILER=false
SHOW_ERRORS=true
ERROR_REPORTING=E_ALL